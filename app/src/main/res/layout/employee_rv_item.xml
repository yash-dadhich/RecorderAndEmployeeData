<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_marginVertical="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/recording_list_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/recording_list_title_bg"
            android:layout_height="54dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/rvItemTitle"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="2"
            android:layout_marginBottom="12dp"
            android:text="Employee Id"
            android:textColor="@color/primaryColor"
            android:textSize="14sp" />

            <TextView
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:id="@+id/rvItemId"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="2"
                android:layout_toEndOf="@id/rvItemTitle"
                android:layout_marginBottom="12dp"
                android:text="1"
                android:textColor="@color/redColor"
                android:textSize="14sp" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/deleteEmployeeData"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/delete_audio"
                android:src="@drawable/delete_employee"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:fontFamily="@font/roboto"
                android:textColor="@color/greyTextColor"/>
            <TextView
                android:id="@+id/rvEmpName"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCD"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primaryColor"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="4dp"
            android:background="@color/greyTextColor"/>

        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Salary"
                android:fontFamily="@font/roboto"
                android:textColor="@color/greyTextColor"/>
            <TextView
                android:id="@+id/rvEmpSalary"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600000"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primaryColor"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="4dp"
            android:background="@color/greyTextColor"/>

        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Age"
                android:fontFamily="@font/roboto"
                android:textColor="@color/greyTextColor"/>
            <TextView
                android:id="@+id/rvEmpAge"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primaryColor"/>
        </RelativeLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>